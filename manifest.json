{
  "manifest_version": 3,
  "name": "Review Summarizer",
  "version": "1.0.0",
  "description": "Get instant AI-powered summaries of product reviews",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://amazon.in/*",
    "https://www.flipkart.com/*",
    "https://www.myntra.com/*",
    "https://www.snapdeal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*/dp/*",
        "https://amazon.in/*/dp/*",
        "https://www.flipkart.com/*/p/*",
        "https://www.myntra.com/*/buy",
        "https://www.snapdeal.com/product/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Review Summarizer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
